<h1>Cocktails</h1>

<%= link_to '+ Add a cocktail', new_cocktail_path, class: 'btn btn-warning' %>
<div class="row">
  <div class="banner" url(../images/Bannercocktail.jpg)>

  </div>

  <% @cocktails.each do |cocktail| %>

    <div class="col-sm m-2">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"> <%= cocktail.name %> </h5>
          <p class="card-text"> <%= cocktail.ingredients.count %> ingredients</p>
          <%= link_to 'See details', cocktail_path(cocktail), class: 'btn btn-warning' %>
        </div>
      </div>
    </div>

  <% end %>

</div>

