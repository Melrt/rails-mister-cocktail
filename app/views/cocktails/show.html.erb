<div class="wrapper vh-100">
  <h1 class="text-center p-4">Cocktail's details</h1>
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <%= image_tag "cocktail1.jpg", alt: "cocktail Theia" %>
      </div>
      <div class="col">
        <h5 class="card-title"><%= @cocktail.name %></h5>
        <p class="card-text">
          <% @cocktail.doses.each do |dose| %>
          <%= dose.description %> of <%= dose.ingredient.name%>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash"></i>
          <% end %>
          <br>
        </p>
        <% end %>
        <%= link_to 'Add an Ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-warning' %>

        <p class="card-text"><small class="text-muted">"The perfect cocktail for a perfect party"</small></p>
      </div>
    </div>
  </div>
  <div class="text-center m-5">
    <%= link_to cocktails_path, class: 'btn btn-info' do %>
    <i class="fas fa-long-arrow-alt-left"></i> Back to cocktails list
    <% end %>
  </div>
</div>
