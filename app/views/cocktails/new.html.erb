<div class="wrapper vh-100">
<h1 class="text-center p-3">Add a new cocktail <i class="fas fa-cocktail"></i></h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit 'Add to list', class: 'btn btn-warning'%>
    <% end %>
    </div>
  </div>
</div>
<div class="text-center m-5">
  <%= link_to 'Cancel', cocktails_path, class: 'btn btn-info' %>
</div>
</div>
